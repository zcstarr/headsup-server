
{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "es2021",
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck":true,
    "allowSyntheticDefaultImports": true, // (C)
  }
}